        <param-value>jdbc:mysql://localhost/mysql_db</param-value>
    </context-param>
    <servlet>
        <servlet-name>processig</servlet-name>
        <servlet-class>servlet.processig</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>insert</servlet-name>
        <servlet-class>servlet.insert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>servlet.MyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadingServlet</servlet-name>
        <servlet-class>servlet.FileUploadingServlet</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/Hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>processig</servlet-name>
        <url-pattern>/processig</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>insert</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/MyServlet</url-pattern>
    </servlet-mapping>
